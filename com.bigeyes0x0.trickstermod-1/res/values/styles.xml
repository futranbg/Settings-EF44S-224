<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="undo_fade_animation">
        <item name="android:windowEnterAnimation">@anim/undo_popup_show</item>
        <item name="android:windowExitAnimation">@anim/undo_popup_hide</item>
    </style>
    <style name="SectionHeader" parent="@*android:style/Widget.TextView">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?color_drawer_text</item>
        <item name="android:paddingLeft">4.0dip</item>
        <item name="android:layout_marginTop">8.0dip</item>
        <item name="android:layout_marginBottom">8.0dip</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="GroupLabel" parent="@*android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?color_holo</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
    </style>
    <style name="Theme.NoDisplay" parent="@*android:style/Theme.Holo.NoActionBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowNoDisplay">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    <style name="Theme.Holo" parent="@*android:style/Theme.Holo">
        <item name="ic_refresh">@drawable/ic_refresh_dark</item>
        <item name="color_drawer">@color/lighter_gray</item>
        <item name="color_drawer_text">@*android:color/black</item>
        <item name="color_holo">@*android:color/holo_blue_dark</item>
    </style>
    <style name="Theme.Holo.Light.DarkActionBar" parent="@*android:style/Theme.Holo.Light.DarkActionBar">
        <item name="ic_refresh">@drawable/ic_refresh_light</item>
        <item name="color_drawer">@*android:color/black</item>
        <item name="color_drawer_text">@*android:color/white</item>
        <item name="color_holo">@*android:color/holo_blue_light</item>
    </style>
    <style name="Theme.Holo.Light.Lime" parent="@style/Theme.Holo.Light.DarkActionBar">
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarCustom</item>
        <item name="android:actionBarStyle">@style/ActionBarCustomBg</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/lime_list_selector_holo_light</item>
        <item name="android:activatedBackgroundIndicator">@drawable/lime_activated_background_holo_light</item>
        <item name="color_holo">@color/lime</item>
        <item name="progress_drawable">@drawable/lime_progress_horizontal_holo_light</item>
        <item name="indeterminate_drawable">@drawable/lime_progress_indeterminate_horizontal_holo_light</item>
    </style>
    <style name="Theme.Holo.Light.Mojo" parent="@style/Theme.Holo.Light.Lime">
        <item name="android:listChoiceBackgroundIndicator">@drawable/mojo_list_selector_holo_light</item>
        <item name="android:activatedBackgroundIndicator">@drawable/mojo_activated_background_holo_light</item>
        <item name="color_holo">@color/mojo</item>
        <item name="progress_drawable">@drawable/mojo_progress_horizontal_holo_light</item>
        <item name="indeterminate_drawable">@drawable/mojo_progress_indeterminate_horizontal_holo_light</item>
    </style>
    <style name="Theme.Holo.Light.SanMarino" parent="@style/Theme.Holo.Light.Lime">
        <item name="android:listChoiceBackgroundIndicator">@drawable/san_marino_list_selector_holo_light</item>
        <item name="android:activatedBackgroundIndicator">@drawable/san_marino_activated_background_holo_light</item>
        <item name="color_holo">@color/san_marino</item>
        <item name="progress_drawable">@drawable/san_marino_progress_horizontal_holo_light</item>
        <item name="indeterminate_drawable">@drawable/san_marino_progress_indeterminate_horizontal_holo_light</item>
    </style>
    <style name="Theme.Holo.Lime" parent="@style/Theme.Holo">
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarCustom</item>
        <item name="android:actionBarStyle">@style/ActionBarCustomBg</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/lime_list_selector_holo_light</item>
        <item name="android:activatedBackgroundIndicator">@drawable/lime_activated_background_holo_light</item>
        <item name="color_holo">@color/lime</item>
        <item name="progress_drawable">@drawable/lime_progress_horizontal_holo_light</item>
        <item name="indeterminate_drawable">@drawable/lime_progress_indeterminate_horizontal_holo_light</item>
    </style>
    <style name="Theme.Holo.Mojo" parent="@style/Theme.Holo.Lime">
        <item name="android:listChoiceBackgroundIndicator">@drawable/mojo_list_selector_holo_light</item>
        <item name="android:activatedBackgroundIndicator">@drawable/mojo_activated_background_holo_light</item>
        <item name="color_holo">@color/mojo</item>
        <item name="progress_drawable">@drawable/mojo_progress_horizontal_holo_light</item>
        <item name="indeterminate_drawable">@drawable/mojo_progress_indeterminate_horizontal_holo_light</item>
    </style>
    <style name="Theme.Holo.SanMarino" parent="@style/Theme.Holo.Lime">
        <item name="android:listChoiceBackgroundIndicator">@drawable/san_marino_list_selector_holo_light</item>
        <item name="android:activatedBackgroundIndicator">@drawable/san_marino_activated_background_holo_light</item>
        <item name="color_holo">@color/san_marino</item>
        <item name="progress_drawable">@drawable/san_marino_progress_horizontal_holo_light</item>
        <item name="indeterminate_drawable">@drawable/san_marino_progress_indeterminate_horizontal_holo_light</item>
    </style>
    <style name="ActionBarCustomBg" parent="@*android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">?color_holo</item>
    </style>
    <style name="ProgressBarCustom" parent="@*android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">?indeterminate_drawable</item>
        <item name="android:progressDrawable">?progress_drawable</item>
    </style>
</resources>
